{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "ts-node": {
    "esm": true
  }
}
